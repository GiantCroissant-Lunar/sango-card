{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://contractwork.com/schemas/sango-card/multi-stage-preparation.schema.json",
  "title": "Multi-Stage Preparation Configuration",
  "description": "Configuration for multi-stage dependency injection system supporting different injection points throughout the build lifecycle",
  "type": "object",
  "required": ["version", "injectionStages"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version (2.0 for multi-stage)",
      "pattern": "^2\\.\\d+$"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of this configuration"
    },
    "injectionStages": {
      "type": "object",
      "description": "Configuration for each injection stage",
      "properties": {
        "preTest": {
          "$ref": "#/definitions/testStage",
          "description": "Test-specific dependencies injected before pre-build tests"
        },
        "preBuild": {
          "$ref": "#/definitions/buildStage",
          "description": "Core Unity build dependencies"
        },
        "postBuild": {
          "$ref": "#/definitions/testStage",
          "description": "Runtime testing dependencies injected after Unity build"
        },
        "preNativeBuild": {
          "$ref": "#/definitions/nativeStage",
          "description": "Platform-specific native dependencies (iOS/Android)"
        },
        "postNativeBuild": {
          "$ref": "#/definitions/packagingStage",
          "description": "Final packaging modifications"
        }
      }
    }
  },
  "definitions": {
    "baseStage": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether this stage is active"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of this stage"
        },
        "cleanupAfter": {
          "type": "boolean",
          "description": "Whether to automatically cleanup after this stage completes",
          "default": false
        }
      }
    },
    "testStage": {
      "allOf": [
        { "$ref": "#/definitions/baseStage" },
        {
          "properties": {
            "packages": {
              "type": "array",
              "description": "Unity packages to inject",
              "items": {
                "$ref": "#/definitions/package"
              }
            },
            "assemblies": {
              "type": "array",
              "description": "Assembly DLLs to inject",
              "items": {
                "type": "string"
              }
            },
            "patches": {
              "type": "array",
              "description": "File patches to apply",
              "items": {
                "$ref": "#/definitions/patch"
              }
            }
          }
        }
      ]
    },
    "buildStage": {
      "allOf": [
        { "$ref": "#/definitions/baseStage" },
        {
          "properties": {
            "packages": {
              "type": "array",
              "description": "Unity packages to inject",
              "items": {
                "$ref": "#/definitions/package"
              }
            },
            "assemblies": {
              "type": "array",
              "description": "Assembly DLLs to inject",
              "items": {
                "type": "string"
              }
            },
            "patches": {
              "type": "array",
              "description": "File patches to apply",
              "items": {
                "$ref": "#/definitions/patch"
              }
            }
          }
        }
      ]
    },
    "nativeStage": {
      "allOf": [
        { "$ref": "#/definitions/baseStage" },
        {
          "properties": {
            "platforms": {
              "type": "object",
              "description": "Platform-specific configurations",
              "properties": {
                "ios": {
                  "$ref": "#/definitions/platformConfig",
                  "description": "iOS-specific native dependencies"
                },
                "android": {
                  "$ref": "#/definitions/platformConfig",
                  "description": "Android-specific native dependencies"
                }
              }
            }
          }
        }
      ]
    },
    "packagingStage": {
      "allOf": [
        { "$ref": "#/definitions/baseStage" },
        {
          "properties": {
            "files": {
              "type": "array",
              "description": "Files to copy",
              "items": {
                "$ref": "#/definitions/fileOperation"
              }
            },
            "patches": {
              "type": "array",
              "description": "File patches to apply",
              "items": {
                "$ref": "#/definitions/patch"
              }
            }
          }
        }
      ]
    },
    "platformConfig": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether this platform configuration is active"
        },
        "files": {
          "type": "array",
          "description": "Files to copy for this platform",
          "items": {
            "$ref": "#/definitions/fileOperation"
          }
        },
        "patches": {
          "type": "array",
          "description": "File patches to apply for this platform",
          "items": {
            "$ref": "#/definitions/patch"
          }
        },
        "commands": {
          "type": "array",
          "description": "Commands to execute for this platform (e.g., pod install, gradle)",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "package": {
      "type": "object",
      "required": ["name", "source", "target"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Package identifier"
        },
        "version": {
          "type": "string",
          "description": "Package version"
        },
        "source": {
          "type": "string",
          "description": "Source path (relative to repository root)"
        },
        "target": {
          "type": "string",
          "description": "Target path (relative to repository root)"
        }
      }
    },
    "fileOperation": {
      "type": "object",
      "required": ["source", "target"],
      "properties": {
        "source": {
          "type": "string",
          "description": "Source file path (relative to repository root)"
        },
        "target": {
          "type": "string",
          "description": "Target file path (relative to repository root)"
        }
      }
    },
    "patch": {
      "type": "object",
      "required": ["type", "file"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["json", "text", "xml", "gradle", "plist"],
          "description": "Type of file to patch"
        },
        "file": {
          "type": "string",
          "description": "File path to patch (relative to repository root)"
        },
        "operations": {
          "type": "array",
          "description": "Patch operations to apply",
          "items": {
            "type": "object",
            "required": ["action"],
            "properties": {
              "action": {
                "type": "string",
                "enum": ["add", "replace", "remove"],
                "description": "Patch action"
              },
              "path": {
                "type": "string",
                "description": "JSON path or XPath to target element"
              },
              "value": {
                "description": "Value to set (for add/replace actions)"
              }
            }
          }
        }
      }
    }
  }
}
