{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://contractwork.com/schemas/sango-card/multi-stage-injection.schema.json",
  "title": "Multi-Stage Injection Configuration",
  "description": "Configuration for multi-stage dependency injection system supporting sequential injection phases throughout the build lifecycle (v2.0). Defines when to inject packages, assemblies, manipulate assets, patch code, and set scripting symbols.",
  "type": "object",
  "required": ["version", "injectionStages"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version (2.0 for multi-stage)",
      "pattern": "^2\\.\\d+$"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of this configuration"
    },
    "cacheSource": {
      "type": "string",
      "description": "Path to v1.0 preparation.json to use for cache population",
      "default": "build/configs/preparation/preparation.json"
    },
    "injectionStages": {
      "type": "array",
      "description": "Sequential array of injection stages to execute",
      "items": {
        "$ref": "#/definitions/injectionStage"
      },
      "minItems": 1
    }
  },
  "definitions": {
    "injectionStage": {
      "type": "object",
      "required": ["name", "enabled"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Stage name (e.g., preTest, preBuild, postBuild, preNativeBuild, postNativeBuild)",
          "enum": ["preTest", "preBuild", "postBuild", "preNativeBuild", "postNativeBuild", "custom"]
        },
        "enabled": {
          "type": "boolean",
          "description": "Whether this stage is active"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of this stage"
        },
        "cleanupAfter": {
          "type": "boolean",
          "description": "Whether to automatically cleanup after this stage completes",
          "default": false
        },
        "packages": {
          "type": "array",
          "description": "Unity packages to inject",
          "items": {
            "$ref": "#/definitions/package"
          }
        },
        "assemblies": {
          "type": "array",
          "description": "Assembly DLLs to inject",
          "items": {
            "$ref": "#/definitions/assembly"
          }
        },
        "assetManipulations": {
          "type": "array",
          "description": "File operations to perform",
          "items": {
            "$ref": "#/definitions/assetManipulation"
          }
        },
        "codePatches": {
          "type": "array",
          "description": "Code patches to apply",
          "items": {
            "$ref": "#/definitions/codePatch"
          }
        },
        "scriptingDefineSymbols": {
          "$ref": "#/definitions/scriptingDefineSymbols",
          "description": "Scripting define symbols to set"
        },
        "platforms": {
          "type": "object",
          "description": "Platform-specific configurations (for preNativeBuild stage)",
          "properties": {
            "ios": {
              "$ref": "#/definitions/platformConfig"
            },
            "android": {
              "$ref": "#/definitions/platformConfig"
            }
          }
        }
      }
    },
    "platformConfig": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether this platform configuration is active"
        },
        "files": {
          "type": "array",
          "description": "Files to copy for this platform",
          "items": {
            "$ref": "#/definitions/fileOperation"
          }
        },
        "codePatches": {
          "type": "array",
          "description": "Code patches to apply for this platform",
          "items": {
            "$ref": "#/definitions/codePatch"
          }
        },
        "commands": {
          "type": "array",
          "description": "Commands to execute (e.g., pod install, gradle)",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "package": {
      "type": "object",
      "required": ["name", "source", "target"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Package identifier (e.g., com.unity.addressables)"
        },
        "version": {
          "type": "string",
          "description": "Package version"
        },
        "source": {
          "type": "string",
          "description": "Source path (relative to repository root)"
        },
        "target": {
          "type": "string",
          "description": "Target path (relative to repository root)"
        }
      }
    },
    "assembly": {
      "type": "object",
      "required": ["name", "source", "target"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Assembly name"
        },
        "version": {
          "type": "string",
          "description": "Assembly version"
        },
        "source": {
          "type": "string",
          "description": "Source path (relative to repository root)"
        },
        "target": {
          "type": "string",
          "description": "Target path (relative to repository root)"
        }
      }
    },
    "assetManipulation": {
      "type": "object",
      "required": ["type", "target"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["copy", "move", "delete"],
          "description": "Type of manipulation"
        },
        "source": {
          "type": "string",
          "description": "Source path (required for copy/move)"
        },
        "target": {
          "type": "string",
          "description": "Target path"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description"
        }
      }
    },
    "codePatch": {
      "type": "object",
      "required": ["file", "patches"],
      "properties": {
        "file": {
          "type": "string",
          "description": "File path to patch (relative to repository root)"
        },
        "patches": {
          "type": "array",
          "description": "Array of search/replace operations",
          "items": {
            "type": "object",
            "required": ["search", "replace"],
            "properties": {
              "search": {
                "type": "string",
                "description": "Text to search for"
              },
              "replace": {
                "type": "string",
                "description": "Replacement text"
              }
            }
          }
        }
      }
    },
    "scriptingDefineSymbols": {
      "type": "object",
      "properties": {
        "add": {
          "type": "array",
          "description": "Symbols to add",
          "items": {
            "type": "string"
          }
        },
        "remove": {
          "type": "array",
          "description": "Symbols to remove",
          "items": {
            "type": "string"
          }
        },
        "platform": {
          "type": "string",
          "description": "Target platform (e.g., StandaloneWindows64)"
        },
        "clearExisting": {
          "type": "boolean",
          "description": "Whether to clear existing symbols before adding",
          "default": false
        }
      }
    },
    "fileOperation": {
      "type": "object",
      "required": ["source", "target"],
      "properties": {
        "source": {
          "type": "string",
          "description": "Source file path (relative to repository root)"
        },
        "target": {
          "type": "string",
          "description": "Target file path (relative to repository root)"
        }
      }
    }
  }
}
