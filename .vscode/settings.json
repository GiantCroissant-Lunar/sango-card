{
    "editor.fontSize": 16,

    "files.associations": {
        "**/*.asmdef": "json",
        "**/*.ruleset": "xml",
        "**/*.sln.DotSettings": "xml"
    },

    "files.exclude": {
        "**/projects/**/*.csproj": true,
        "**/Library/[!Package]*": true,
        "**/Library/[{com, ex}]*": true,
        "**/Library/PackageManager": true,
        "**/Library/*.bin": true,
        "**/build/preparation/cache/**": true,
        "**/projects/client/Library/**": true,
        "**/projects/client/Temp/**": true,
        "**/projects/client/Logs/**": true
    },

    "files.watcherExclude": {
        "**/build/preparation/cache/**": true,
        "**/projects/client/Library/**": true,
        "**/projects/client/Temp/**": true,
        "**/projects/client/Logs/**": true,
        "**/projects/client/Packages/com.*/Runtime/**/*.dll": true,
        "**/projects/client/Packages/com.*/Editor/**/*.dll": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true
    },

    "search.exclude": {
        "**/build/preparation/cache/**": true,
        "**/projects/client/Library/**": true,
        "**/projects/client/Temp/**": true,
        "**/projects/client/Logs/**": true
    },

    "window.zoomLevel": 2,

    "workbench.colorTheme": "Paper Contrast",

    "chat.promptFilesRecommendations": {
        "speckit.constitution": true,
        "speckit.specify": true,
        "speckit.plan": true,
        "speckit.tasks": true,
        "speckit.implement": true
    },
    "chat.tools.terminal.autoApprove": {
        ".specify/scripts/bash/": true,
        ".specify/scripts/powershell/": true
    }
}
